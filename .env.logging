# Peer Discovery Logging Configuration
# Debug levels: 0=silent, 1=errors, 2=warnings, 3=info, 4=debug, 5=verbose
PEER_DEBUG_LEVEL=3
ENABLE_PEER_LOGGING=true

# Router Logging Configuration  
ROUTER_DEBUG_LEVEL=3
ENABLE_ROUTER_LOGGING=true

# Quick Settings:
# For minimal output: PEER_DEBUG_LEVEL=1, ROUTER_DEBUG_LEVEL=1
# For normal output: PEER_DEBUG_LEVEL=3, ROUTER_DEBUG_LEVEL=3  
# For verbose debugging: PEER_DEBUG_LEVEL=5, ROUTER_DEBUG_LEVEL=5
# To disable all logging: ENABLE_PEER_LOGGING=false, ENABLE_ROUTER_LOGGING=false